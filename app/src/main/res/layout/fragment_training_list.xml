<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/OptionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".TrainingList">


    <TextView
        android:id="@+id/trainingListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:padding="6dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="60sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/trainingButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/training1"
        android:textAlignment="center"
        android:textSize="18sp" />


    <Button
        android:id="@+id/trainingButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/training2"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/trainingButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/training3"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/trainingButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/training4"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>
